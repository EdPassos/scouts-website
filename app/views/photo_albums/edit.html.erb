<h1>Editing Photo Album</h1>

<%= form_for @photo_album, action: :new_photo,
  url: {action: 'newphoto'},
  html: {id: 'newphoto',
         class: 'dropzone'
        } do |f|
%>
<% end %>

<%= render 'form' %>

<%= button_to 'Eliminar Album', @photo_album, method: :delete, data: { confirm: 'Are you sure?' }, class: 'alert' %>
<script>
  Dropzone.options.newphoto = {
    paramName: "file", // The name that will be used to transfer the file
    maxFilesize: 10, // MB
    accept: function(file, done) {
      if (file.name == "justinbieber.jpg") {
      done("Naha, you don't.");
    }
      else { done(); }
    }
  };
  $(document).on("ready page:load", Dropzone.discover)
</script>
