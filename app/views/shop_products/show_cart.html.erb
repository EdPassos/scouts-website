<div class='content'>
	<div class="row">
		<div class="columns">
			<h1><%= title "Carrinho de Compras" %></h1>
			<table>
				<thead class="hidden-for-small-only">
					<th width=200>Produto</th>
					<th width=100>Pre√ßo</th>
					<th>Quantidade</th>
					<th>Total</th>
					<th></th>
				</thead>
				<tbody>
					<% current_user.shopping_cart_products.each do |cart_product| %>
						<tr>
							<td><%= cart_product.shop_product.name %></td>
							<td><%= cart_product.shop_product.price_str %></td>
							<td><%= cart_product.quantity %></td>
							<td><%= decimal_to_euro(cart_product_total cart_product) %></td>
							<td><%= link_to "X", remove_product_from_cart_path(cart_product.shop_product), class: "alert label" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<h3>Total: <%= decimal_to_euro(cart_total current_user.shopping_cart_products) %></h3>
		</div>
	</div>
</div>
