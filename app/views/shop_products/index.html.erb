<div class="row">
  <div class="columns">
    <%= render "top_menu" %>
  </div>
</div>
<div class="row" data-equalizer>
  <% count = 0 %>
  <% @shop_products.each do |product| %>
    <div class="columns medium-4 large-4 end" data-equalizer-watch>
      <div class="panel radius">
        <%= image_tag product.photo.url(:medium) %>
        <h2><%= product.name %></h2>
        <%= simple_format product.description %>
        <p><strong><%= product.price_str %></strong></p>
        <ul class="stack button-group radius">
          <li><%= link_to 'Adicionar', add_product_to_cart_path(product), class: "button expand" %></li>
          <% if can? :update, ShopProduct %>
            <li><%= link_to 'Editar', edit_shop_product_path(product), class: "button info" %></li>
            <li><%= link_to 'Eliminar', product, method: :delete, class: "button alert" %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% count += 1 %>
    <% if count == 3 %>
      </div>
      <div class="row" data-equalizer>
    <% end %>
  <% end %>
</div>
