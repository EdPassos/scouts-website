    <!-- Left Nav Section -->
    <ul class="left">
  <!--
    <li><%= link_to "História", history_url %></li>
  -->
    <li class="has-dropdown"><%= link_to "Secções", sections_path %>
      <ul class="dropdown">
        <% Section.all.where(public: true).each do |section| %>
          <li><%= link_to section.name, section %></li>
        <% end %>
        <li><%= link_to "Alcateia", alcateia_path %></li>
