      <li class="has-dropdown"><%= link_to current_user.email, current_user %>
        <ul class="dropdown">
          <% if can? :create, Post %>
            <li><%= link_to "Criar Artigo", new_post_path %></li>
          <% end %>
          <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
        </ul>
