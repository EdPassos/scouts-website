<% title 'Livros' %>

<% if can? :create, PhotoAlbum %>
  <%= render partial: 'pages/page_action', locals: { link: new_book_path, icon: 'plus' } %>
<% end %>

<div class="card card-3">
  <div class="card-content">
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Borrowed to</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.borrowed_to %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
