<div class='content'>
	<div class="row">
		<div class="columns">
			<%= form_for @event do |f| %>
				<%= f.label :title %>
				<%= f.text_field :title %>
				<%= f.label :description %>
				<%= f.text_area :description %>
				<%= f.label :date %>
				<%= f.datetime_field :date %>
				<%= f.submit %>
			<% end %>
		</div>
	</div>
</div>
