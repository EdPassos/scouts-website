<div id="content" class="content">
	<div class="row">
		<div class="columns">
			<h1><%= title "Registar" %></h1>
		</div>
	</div>
	<div class="row">
		<div class="columns medium-7 large-6">

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>

				<div class="row collapse">
					<div class="columns small-3 large-2">
						<%= f.label :email, class: "prefix" %>
					</div>
					<div class="columns small-9 large-10">
						<%= f.email_field :email, autofocus: true %>
					</div>
				</div>

				<div class="row collapse">
					<div class="columns small-3 large-2">
						<%= f.label :password, class: "prefix" %>
					</div>
					<div class="columns small-9 large-10">
						<% if @minimum_password_length %>
							<%= f.password_field :password, autocomplete: "off", placeholder: "MÃ­nimo de #{@minimum_password_length} caracteres" %>
						<% else %>
							<%= f.password_field :password, autocomplete: "off" %>
						<% end %>
					</div>
				</div>

				<div class="row collapse">
					<div class="columns small-3 large-2">
						<%= f.label :password_confirmation, "Password", class: "prefix" %>
					</div>
					<div class="columns small-9 large-10">
						<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar password" %>
					</div>
				</div>

				<div class="row collapse">
					<div class="columns small-9 large-10 small-offset-3 large-offset-2">
						<%= f.submit "Registar", class: "button expand" %>
					</div>
				</div>
			<% end %>

			<%= render "devise/shared/links" %>

		</div>
		<div class="columns medium-5 large-6 hidei show-for-medium-up">
			<%= image_tag "agrportosalvo.jpg" %>
		</div>
	</div>
</div>
