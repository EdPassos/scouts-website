<ul class="button-group radius right">
	<%- if controller_name != 'sessions' %>
		<li><%= link_to "Entrar", new_session_path(resource_name), class: "button tiny" %></li>
	<% end -%>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<li><%= link_to "Registar", new_registration_path(resource_name), class: "button tiny" %></li>
	<% end -%>

	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		<li><%= link_to "Esqueceste a tua password?", new_password_path(resource_name), class: "button tiny" %></li>
	<% end -%>

	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
		<li><%= link_to "Não recebeste instruções de confirmação?", new_confirmation_path(resource_name), class: "button tiny" %></li>
	<% end -%>

	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
		<li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "button tiny" %></li>
	<% end -%>

	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
		  <li><%= link_to "Entrar com #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "button tiny" %></li>
	  <% end -%>
	<% end -%>
</ul>
