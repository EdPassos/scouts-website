<div class="row">
  <div class="columns medium-8 large-9">
    <div class="card card-3 info">
      <%= form_for @post do |f| %>
        <div class="card-content">
          <div class="row">
            <div class="columns small-6">
              <%= f.file_field :image, as: :file %>
            </div>
            <div class="columns small-6 text-right">
              <div class="row">
                <div class="columns small-10">
                  <%= f.label :draft, 'Rascunho' %>
                </div>
                <div class="columns small-2">
                  <%= f.check_box :draft, prompt: 'Rascunho' %>
                </div>
              </div>
            </div>
          </div>
          <%= f.label :title, "Título" %>
          <%= f.text_field :title %>
          <%= f.label :body, "Texto" %>
          <%= f.text_area :body, rows: 15 %>
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {prompt: 'Categorias'} %><br>
        </div>
        <%= f.submit class: "button first last" %>
      <% end %>
    </div>
  </div>
  <div class="columns medium-4 large-3">
    <div class="card card-3">
        <div class="card-content">
        <h3>### H3 </h3>
        <h4>#### H4 </h4>
        <h5>##### H5 </h5>
        <h6>###### H6</h6>
        _<em>itálico</em>_<br>
        __<strong>bold</strong>__<br>
        ~~<del>riscado</del>~~<br>
        [Text](Link "Description")<br>
        ![alt text](Image Link "Description")<br>
        `<code>Atenção</code>`<br>
        <blockquote>> Citação</blockquote><br>
        Linha horizontal: ---
        <hr>
      </div>
    </div>
  </div>
</div>
