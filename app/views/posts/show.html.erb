<div class='content'>
	<div class="row">
		<div class="columns">
			<h1><%= title @post.title %></h1>
		</div>
	</div>
	<div class="row">
		<div class="columns">
			<%= simple_format @post_body %>
			<small><%= "Criado a #{@post.created_at.strftime('%-d/%m/%y')}" %></small>
      <% if can? :edit, @post %>
        <hr>
        <h3>Editar</h3>
        <%= render 'posts/form' %>
        <%= link_to "Eliminar", @post, class: "button tiny", method: :delete, data: {confirm: "Tem a certeza que pretende eliminar este Post?"} %>
      <% end %>
		</div>
	</div>
</div>
