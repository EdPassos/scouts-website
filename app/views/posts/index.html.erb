<div class='content'>
	<div class="row">
		<div class="columns medium-6 small-6">
			<h1><%= title "Artigos" %></h1>
		</div>
		<div class="columns medium-6 small-6 text-right">
		</div>
	</div>
	<div class="row">
		<div class="columns">
			<% @posts.each do |post| %>
				<h2><%= post.title %></h2>
				<%= simple_format post.body %>
				<small><%= "#{post.user.email} a #{post.created_at.strftime('%-d/%m/%y')}" %></small>
			<% end %>
		</div>
	</div>
</div>
