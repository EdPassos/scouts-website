<% title "Blog" %>

<% if can? :create, PhotoAlbum %>
  <%= render partial: 'pages/page_action', locals: { link: new_post_path, icon: 'plus' } %>
<% end %>

<% content_for :back_link do %>
  <%= root_path %>
<% end %>

<% content_for :subtitle do %>
  <%= will_paginate @posts, previous_label: '', next_label: '' %>
<% end %>

<div class="row">
  <div class="columns">
    <table>
      <thead>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr data-url="<%= edit_post_path post %>">
            <td class='image'><%= image_tag post.image.url %></td>
            <td><%= post.title %></td>
            <td><%= post.author.name %></td>
            <td class="text-right"><%= post.published_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @posts, page_links: false, previous_label: '', next_label: '' %>
  </div>
</div>
